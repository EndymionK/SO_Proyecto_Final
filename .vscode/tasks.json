{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "$env:Path = 'C:\\msys64\\mingw64\\bin;' + $env:Path; cmake -S . -B build -G 'Ninja' -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=g++",
      "group": { "kind": "build", "isDefault": true },
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "$env:Path = 'C:\\msys64\\mingw64\\bin;' + $env:Path; cmake --build build",
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "Run miner (smoke)",
      "type": "shell",
      "command": "$env:Path = 'C:\\msys64\\mingw64\\bin;' + $env:Path; .\\build\\miner.exe --mode sequential --difficulty 18 --threads 1 --timeout 10 --metrics-out smoke_test.csv",
      "group": "test",
      "presentation": { "reveal": "always" }
    }
  ]
}
